<div class="comments">
  <h3 class="comments-title">Comments:</h3>
  {{!-- loops through comments array which contains comment objects --}}
  {{!-- hense each element is refered to as this --}}
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>